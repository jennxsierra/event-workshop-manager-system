# .env.example
# Database Configuration
DB_NAME=event_manager
DB_USER=postgres
# If your PostgreSQL installation doesn't use a password (e.g., in development), leave this empty
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Connection string for Prisma
# For PostgreSQL without password: DATABASE_URL=postgresql://${DB_USER}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret
SESSION_SECRET=your_session_secret_here
