<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>User Management</h1>
    <a href="/users/create" class="btn btn-primary">Create New User</a>
</div>

<div class="card">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Users List</h5>
            <form action="/users" method="GET" class="d-flex">
                <input type="text" class="form-control me-2" name="search" placeholder="Search users..." 
                       value="<%= locals.search || '' %>">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
    </div>
    <div class="card-body">
        <% if (locals.users && users.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Organization</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.firstName %> <%= user.lastName %></td>
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <span class="badge bg-<%= getRoleBadgeClass(user.role) %>">
                                        <%= user.role %>
                                    </span>
                                </td>
                                <td><%= user.organization || 'â€”' %></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/users/<%= user.id %>/edit" class="btn btn-outline-primary">Edit</a>
                                        <% if(locals.user && locals.user.id !== user.id && locals.user.role === 'ADMIN') { %>
                                            <form action="/users/<%= user.id %>?_method=DELETE" method="POST" class="ms-1">
                                                <button type="submit" class="btn btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this user?')">
                                                    Delete
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <% if(locals.pagination) { %>
                <%- include('../partials/pagination', { pagination: pagination }) %>
            <% } %>
        <% } else { %>
            <div class="alert alert-info">
                No users found matching your criteria.
            </div>
        <% } %>
    </div>
</div>

<% function getRoleBadgeClass(role) {
    switch(role) {
        case 'ADMIN': return 'danger';
        case 'STAFF': return 'warning';
        case 'USER': return 'info';
        default: return 'secondary';
    }
} %>