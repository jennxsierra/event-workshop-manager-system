<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <%= locals.title || 'Error' %>
                </h3>
            </div>
            <div class="card-body text-center py-5">
                <% if(locals.statusCode) { %>
                    <h1 class="display-1 text-danger mb-4"><%= statusCode %></h1>
                <% } %>
                
                <h3 class="mb-4"><%= locals.message || 'Something went wrong' %></h3>
                
                <p class="lead mb-5">
                    <%= locals.description || 'We apologize for the inconvenience. Please try again later or contact support if the problem persists.' %>
                </p>
                
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a href="/" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-house-fill me-2"></i>
                        Return Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left me-2"></i>
                        Go Back
                    </a>
                </div>
            </div>
            <div class="card-footer bg-light">
                <% if(locals.error && process.env.NODE_ENV !== 'production') { %>
                    <div class="accordion" id="errorDetailsAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingErrorDetails">
                                <button class="accordion-button collapsed" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#errorDetails">
                                    Technical Details
                                </button>
                            </h2>
                            <div id="errorDetails" class="accordion-collapse collapse" 
                                 aria-labelledby="headingErrorDetails" data-bs-parent="#errorDetailsAccordion">
                                <div class="accordion-body">
                                    <pre class="mb-0 text-danger"><%= error.stack %></pre>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <p class="text-center mb-0">
                        If you need assistance, please contact our support team.
                    </p>
                <% } %>
            </div>
        </div>
    </div>
</div>